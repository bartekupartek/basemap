      "url": "pmtiles://http://localhost:8081/ways.pmtiles",
      "type": "vector",
      "bounds": [-180, -85.0511287798066, 180, 85.0511287798066]
    }
  },
  "layers": [
    {
      "id": "park-minor-casing",
      "type": "line",
      "source": "tiles",
      "source-layer": "road",
      "filter": [
        "all",
        ["==", "in_park", true],
        ["in", "kind", "minor", "service", "track", "residential", "unclassified"]
      ],
      "layout": {"line-cap": "round", "line-join": "round"},
      "paint": {
        "line-color": "zinc-300",
        "line-opacity": {"stops": [[12, 0], [12.5, 1]]},
        "line-width": {"base": 1.2, "stops": [[8, 1.5], [20, 17]]}
      }
    },
    {
      "id": "park-secondary-tertiary-casing",
      "type": "line",
      "source": "tiles",
      "source-layer": "road",
      "filter": [
        "all",
        ["==", "in_park", true],
        ["in", "kind", "secondary", "tertiary"]
      ],
      "layout": {
        "line-cap": "butt",
        "line-join": "round",
        "visibility": "visible"
      },
      "paint": {
        "line-color": "yellow-500",
        "line-opacity": 1,
        "line-width": {"base": 1.2, "stops": [[8, 1.5], [20, 17]]}
      }
    },
    {
      "id": "park-primary-casing",
      "type": "line",
      "source": "tiles",
