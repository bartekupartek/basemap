      "paint": {
        "line-color": "yellow-500",
        "line-opacity": {"stops": [[7, 0], [8, 1]]},
        "line-width": {
          "base": 1.2,
          "stops": [[7, 0], [8, 0.6], [9, 1.5], [20, 22]]
        }
      }
    },
    {
      "id": "park-trunk-casing",
      "type": "line",
      "source": "tiles",
      "source-layer": "road",
      "minzoom": 5,
      "filter": [
        "all",
        ["==", "in_park", true],
        ["in", "kind", "trunk"]
      ],
      "layout": {
        "line-cap": "butt",
        "line-join": "round",
        "visibility": "visible"
      },
      "paint": {
        "line-color": "yellow-500",
        "line-opacity": {"stops": [[5, 0], [6, 1]]},
